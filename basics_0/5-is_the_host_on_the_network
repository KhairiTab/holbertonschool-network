#!/usr/bin/env bash

# Check if an IP address argument is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 {IP_ADDRESS}"
    exit 1
fi

# Get the IP address from the command-line argument
ip_address="$1"

# Ping the specified IP address 5 times
ping -c 5 "$ip_address"

# Check the exit status of the ping command
if [ $? -eq 0 ]; then
    echo "Ping to $ip_address was successful."
else
    echo "Ping to $ip_address failed."
fi